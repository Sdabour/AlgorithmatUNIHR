<html>
<head>


    <title>ApplicantWorkerEstimationSearch</title>
    @{
        #region
        
        ApplicantWorkerCol _ApplicantWorkerCol;
        List<SectorSimple> arrSectorSimple = new List<SectorSimple>();
        List<SectorSimple> arrSelectedSimple = new List<SectorSimple>();
        if (Session["SectorID"] != null && (int)Session["SectorID"]!=0)
        {
            int intSectorID = 0;
            int.TryParse(Session["SectorID"].ToString(), out intSectorID);
            if (intSectorID != 0)
            { arrSelectedSimple = SectorSimple.GetList(new SectorSimple() { ID = intSectorID }); }

        }
        if (Session["ApplicantCol"] == null)
        {
            _ApplicantWorkerCol = new ApplicantWorkerCol(new SectorBiz(), 1, 0);

          // UserCol objUserCol = UserBiz.

            Hashtable hsTemp = EmployeeSectorAssignmentCol.AssignedSectorTable;
            //EmployeeSectorAssignmentCol.AssignedSectorTable;
            List<ApplicantWorkerBiz> objApplicantTempCol = (from objApplicant in _ApplicantWorkerCol.Cast<ApplicantWorkerBiz>()
                                                            where hsTemp[objApplicant.CurrentSubSectorBiz.SubSectorBiz.SectorBiz.ID.ToString()] != null
                                                            select objApplicant).ToList();

            _ApplicantWorkerCol.Clear();
            _ApplicantWorkerCol = new ApplicantWorkerCol(true);
            ApplicantWorkerBiz objBiz;
            for (int intIndex = 0; intIndex < objApplicantTempCol.Count; intIndex++)
            {
                objBiz = objApplicantTempCol[intIndex];
                _ApplicantWorkerCol.Add(objBiz);
            }
            
            Session["ApplicantCol"] = _ApplicantWorkerCol;

        }
        else
        {
            _ApplicantWorkerCol = (ApplicantWorkerCol)Session["ApplicantCol"];
        }
        IEnumerable<ApplicantWorkerBiz> objSelectedCol = from objBiz in _ApplicantWorkerCol.Cast<ApplicantWorkerBiz>()
                                                         select objBiz;
        if (arrSelectedSimple.Count > 0)
        {
            objSelectedCol = from objBiz in objSelectedCol
                             join objSector in arrSelectedSimple
                             on objBiz.CurrentSubSectorBiz.SubSectorBiz.SectorBiz.ID equals objSector.ID
                             select objBiz;
        }
        int intTempCount = objSelectedCol.Count();
        IEnumerable<ApplicantSingle> objApplicantCol = from objApplicant in objSelectedCol
                                                       select new ApplicantSingle() { ID = objApplicant.ID, Name = objApplicant.Name, Code = objApplicant.Code, Department = objApplicant.CurrentSubSectorBiz.SubSectorBiz.SectorName, Job = objApplicant.CurrentSubSectorBiz.JobNatureTypeBiz.Name, Processed = objApplicant.User>0, Value = objApplicant.User == 0?"": objApplicant.UserBiz.Name, ForiegnID = objApplicant.User, IsCurrentApplicant = objApplicant.ID == SharpVision.SystemBase.SysData.CurrentUser.EmployeeBiz.ID };
        string strSerializedApplicant = Json.Encode(objApplicantCol.ToArray());
        #endregion

    }

    <script src="~/Scripts/ApplicantControl.js"></script>
    <script src="~/Scripts/JqueryLatest.js"></script>
    <script src="~/Scripts/Applicant.js"></script>
    <script type="text/javascript">
        $(document).ready(FillApplicantLst
        )
        function FillApplicantLst()
        {
            FillApplicant(1);
        }
        function GetSearchData() {
            var vrSector = 0;
            var vrSectorCmbName = "cmbSectorLevel";
            for (var vrIndex = 4; vrIndex >= 1; vrIndex--) {
                if (document.getElementById(vrSectorCmbName + vrIndex).value > 0) {
                    vrSector = document.getElementById(vrSectorCmbName + vrIndex).value;
                    break;
                }
            }
            //    var vrMaterialGroup = document.getElementById("cmbMaterialGroup").value;
            var vrUrl = "";
            vrUrl = window.location.origin;
            vrUrl = vrUrl.replace("ApplicantWorkerEstimationSearch/", "");
            vrUrl = vrUrl.replace("Index/", "");
            //vrStrURL=vrStrURL+ "/EV/services/
            // alert(vrUrl);
            // var vrServieType = document.getElementById("cmbServiceType").value;



            vrUrl = vrUrl + "/ApplicantWorkerEstimationSearch/index";
            if (vrSector != 0)
                vrUrl += "?SectorID=" + vrSector;



            document.getElementById("aSearch").setAttribute("href", vrUrl);
            //alert(document.getElementById("aSearch").getAttribute("href"));
            // alert(vrUrl);
            return true;
        }
    </script>
    
</head>
